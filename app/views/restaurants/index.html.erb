	<% if @restaurants.any? %>
	<% @restaurants.each do |restaurant| %>
	<div class="restaurant">
		<h2><%= restaurant.name %>
				<%= restaurant.cuisine %></h2>
				<h3>Average rating: (<%= star_rating(restaurant.average_rating) %>)</h3>

				<%= link_to('Edit', edit_restaurant_path(restaurant)) %>
				<%= link_to('Delete', restaurant_path(restaurant), method: :delete) %>

				<ul>
					<% restaurant.reviews.each do |review| %>
						<li><%= "#{review.thoughts} (#{star_rating(review.rating)})" %>
							<%= "total: #{review.likes.count}" %>
							<%= link_to('Like', review_likes_path(review), method: :post) %></li>
					<% end %>
				</ul>
				<%= render 'reviews/reviewform', restaurant: restaurant %>
	</div>
	<%end%>
<% else %>
	<h2>No restaurants have been added<h2>
<%end %>
<%= link_to('Add Restaurant', new_restaurant_path) %>