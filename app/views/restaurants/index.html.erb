<% if @restaurants.any? %>
	<% @restaurants.each do |restaurant| %>
		<h2><%= restaurant.name %>
				<%= restaurant.cuisine %><h2>

				<% restaurant.reviews.each do |review| %>
					<li><%= "#{review.thoughts} (#{review.rating})" %></li>
				<% end %>

				<%= link_to('Edit', edit_restaurant_path(restaurant)) %>
				<%= link_to('Delete', restaurant_path(restaurant), method: :delete) %>
				<%= link_to('Review', new_restaurant_review_path(restaurant)) %>
	<% end%>
<% else %>
	<h2>No restaurants have been added<h2>
<% end %>
<%= link_to('Add Restaurant', new_restaurant_path) %>