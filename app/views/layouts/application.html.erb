<!DOCTYPE html>
<html>
<head>
  <title>Yelp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta charset='utf-8'>
</head>
<body>
	<header>
		<div class="logo">Restaurant Review</div>
		<%= link_to('Add Restaurant', new_restaurant_path, class: 'add_restaurant_btn') %>
		<% if current_user %>
			<%= link_to('Sign out', destroy_user_session_path, method: :delete, class: 'sign_out_btn') %>
		<% end %>
	</header>

<section class="main_content">
<%= notice %>
<%= yield %>
</section>

</body>
</html>
